@using Indspire.Soaring.Engagement.Extensions
@model Indspire.Soaring.Engagement.Database.User

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-backend__main-header">
    <div class="admin-backend__main-header-title">
        <a class="admin-backend__main-header-title-back fa fa-chevron-left" asp-action="Index"></a>
        <span class="admin-backend__main-header-title-icon fa fa-info-circle"></span>
        <span class="admin-backend__main-header-title-text">Atendee Details</span>
    </div>

    <div class="admin-backend__main-header-actions">

    </div>
</div>

<div class="admin-backend__main-content">    

    <table class="table__admin-info table">
        <tr>
            <td colspan="2" class="text-center">
                @if (!string.IsNullOrEmpty(Model.UserNumber))
                {
                    <img class="admin-qr-code" src="data:image/png;base64,@Model.GetQRCodeAsBase64()" />
                }
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.UserNumber)
            </td>
            <td>
                @Html.DisplayFor(model => model.UserNumber)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.ExternalID)
            </td>
            <td>
                @Html.DisplayFor(model => model.ExternalID)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(model => model.CreatedDate)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </td>
            <td>
                @Html.DisplayFor(model => model.ModifiedDate)
            </td>
        </tr>
    </table>

    <div>
        <a asp-action="Edit" asp-route-id="@Model.UserID" class="blue-button">Edit</a>
    </div>
</div>


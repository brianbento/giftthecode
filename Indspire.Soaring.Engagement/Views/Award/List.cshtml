@model List<Indspire.Soaring.Engagement.ViewModels.AwardsRow>

@{ 
    ViewData["Title"] = "Top Awards";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="admin-backend__main-header">
    <div class="admin-backend__main-header-title">
        <span class="admin-backend__main-header-title-icon fa fa-trophy"></span>
        <span class="admin-backend__main-header-title-text">Top Awards</span>
    </div>

    <div class="admin-backend__main-header-actions">
        <a class="admin-backend__main-header-actions-link" asp-action="Create" title="Create New Award">
            <span class="admin-backend__main-header-actions-link-icon fa fa-plus fa-2x" aria-hidden="true">
            </span>
        </a>
        <a class="admin-backend__main-header-actions-link" href="javascript:;" download="awards.xls" onclick="return ExcellentExport.excel(this, 'awardsTable', 'awardsTable')" title="Export to Excel">
            <span class="admin-backend__main-header-actions-link-icon fa fa-file-excel-o fa-2x" aria-hidden="true"></span>
        </a>
    </div>

   
</div>



<table id="awardsTable" class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Award Number</th>
        <th>Times Awarded</th>
    </tr>
    @foreach (var row in Model)
    {
    <tr>
        <td>@row.Name</td>
        <td>@row.Description</td>
        <td>@row.AwardNumber</td>
        <td>@row.TimesAwards</td>
    </tr>

    }

</table>

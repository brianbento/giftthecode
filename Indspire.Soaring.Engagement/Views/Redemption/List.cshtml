@model List<Indspire.Soaring.Engagement.ViewModels.RedemptionsRow>

@{
    ViewData["Title"] = "Top Redemptions";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="admin-backend__main-header">
    <div class="admin-backend__main-header-title">
        <a class="admin-backend__main-header-title-back fa fa-chevron-left" asp-action="Index"></a>
        <span class="admin-backend__main-header-title-icon fa fa-gift"></span>
        <span class="admin-backend__main-header-title-text">Top Redemptions</span>
    </div>

    <div class="admin-backend__main-header-actions">
        <a class="admin-backend__main-header-actions-link" asp-action="Create" title="Create New Redepmtion">
            <span class="admin-backend__main-header-actions-link-icon fa fa-plus fa-2x" aria-hidden="true">
            </span>
        </a>
        <a class="admin-backend__main-header-actions-link" href="javascript:;" download="redemptions.xls" onclick="return ExcellentExport.excel(this, 'redemptionsTable', 'redemptionsTable')" title="Export to Excel">
            <span class="admin-backend__main-header-actions-link-icon fa fa-file-excel-o fa-2x" aria-hidden="true"></span>
        </a>
    </div>


</div>



<table id="redemptionsTable" class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Redemption Number</th>
        <th>Times Redeemed</th>
    </tr>
    @foreach (var row in Model)
    {
        <tr>
            <td>@row.Name</td>
            <td>@row.Description</td>
            <td>@row.RedemptionNumber</td>
            <td>@row.TimesRedeemed</td>
        </tr>

    }

</table>
